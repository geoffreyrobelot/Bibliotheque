			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="C:\Users\Public\Documents\ProjetBibliJpa">
				<include name="images/**" />
			</fileset>
		</copy>
		<copy todir="project">
			<fileset dir="C:\Users\Public\Documents\ProjetBibliJpa">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="javase-3.3.0.jar"/>
				<include name="mysql-connector-java-8.0.19.jar"/>
				<include name="org.eclipse.persistence.jpars_2.5.2.v20140319-9ad6abd.jar"/>
				<include name="javax.activation_1.1.0.v201108011116.jar"/>
				<include name="javax.persistence_2.1.0.v201304241213.jar"/>
				<include name="eclipselink.jar"/>
				<include name="javax.mail_1.4.0.v201005080615.jar"/>
				<include name="javax.xml.bind_2.2.0.v201105210648.jar"/>
				<include name="javax.xml.stream_1.0.1.v201004272200.jar"/>
				<include name="com.sun.tools.xjc_2.2.0.jar"/>
				<include name="core-3.3.0.jar"/>
				<include name="org.eclipse.persistence.jpa.modelgen_2.5.2.v20140319-9ad6abd.jar"/>
				<include name="com.sun.xml.bind_2.2.0.v201004141950.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/images">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1252">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/images">
			<exclude name="**/*.java"/>
		</fileset>
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="ProjetBibliJpa.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
			<fx:fileset dir="dist" includes="resources/**"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="BibliLocal"
			mainClass="application.Main"
			version="1.0"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/ProjetBibliJpa.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Bibliotheque"/>
				<attribute name="Implementation-Title" value="BibliLocal"/>
				<attribute name="Implementation-Version" value="1.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="ProjetBibliJpa" nativeBundles="exe"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="ProjetBibliJpa" vendor="Bibliotheque"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
</project>
