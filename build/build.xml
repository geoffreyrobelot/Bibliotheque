			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Public\Documents\libraries\EclipseLink 2.5.2\eclipselink\jlib\jpa">
				<filename name="org.eclipse.persistence.jpa.modelgen_2.5.2.v20140319-9ad6abd.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\LOGICIELS">
				<filename name="javase-3.3.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Public\Documents\libraries\EclipseLink 2.5.2\eclipselink\jlib\moxy">
				<filename name="javax.mail_1.4.0.v201005080615.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\LOGICIELS\04_mysql-connector-java-8.0.19\mysql-connector-java-8.0.19">
				<filename name="mysql-connector-java-8.0.19.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Public\Documents\libraries\EclipseLink 2.5.2\eclipselink\jlib\moxy">
				<filename name="javax.xml.stream_1.0.1.v201004272200.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Public\Documents\libraries\EclipseLink 2.5.2\eclipselink\jlib">
				<filename name="eclipselink.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Public\Documents\libraries\EclipseLink 2.5.2\eclipselink\jlib\jpa">
				<filename name="javax.persistence_2.1.0.v201304241213.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Public\Documents\libraries\EclipseLink 2.5.2\eclipselink\jlib\moxy">
				<filename name="com.sun.xml.bind_2.2.0.v201004141950.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Public\Documents\libraries\EclipseLink 2.5.2\eclipselink\jlib\moxy">
				<filename name="com.sun.tools.xjc_2.2.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Public\Documents\libraries\EclipseLink 2.5.2\eclipselink\jlib\jpa">
				<filename name="org.eclipse.persistence.jpars_2.5.2.v20140319-9ad6abd.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="C:\Users\Public\Documents\libraries\EclipseLink 2.5.2\eclipselink\jlib\moxy">
